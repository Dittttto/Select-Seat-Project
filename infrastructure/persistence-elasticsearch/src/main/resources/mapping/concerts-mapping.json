{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "auto_complete_analyzer": {
          "tokenizer": "my_tokenizer"
        }
      },
      "tokenizer": {
        "my_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 10,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": [
        "lowercase",
        "stop"
      ]
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long",
        "index": false
      },
      "name": {
        "type": "text",
        "analyzer": "auto_complete_analyzer"
      },
      "thumbnail": {
        "type": "text",
        "index": false
      },
      "performers": {
        "type": "nested",
        "properties": {
          "name": {
            "type": "text",
            "analyzer": "auto_complete_analyzer"
          }
        }
      },
      "hall": {
        "type": "text"
      },
      "started_at": {
        "type": "date",
        "format": "strict_date_time"
      },
      "ended_at": {
        "type": "date",
        "format": "strict_date_time"
      },
      "ticket_amount": {
        "type": "long",
        "index": false
      },
      "category": {
        "type": "keyword"
      },
      "state": {
        "type": "keyword"
      },
      "region": {
        "type": "keyword"
      },
      "concert_rating": {
        "type": "keyword"
      }
    }
  }
}
